<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.auth.SignUpActivity">

        <ImageView
            android:id="@+id/instagramText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_100dp"
            android:padding="@dimen/small_16dp"
            android:src="@drawable/instagram" />

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/small_8dp"
            android:text="@string/sign_up_dec"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_16sp" />

        <Button
            android:id="@+id/SignUpWithFacebookBtn"
            style="@style/Button_common"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_with_facebook" />

        <include
            layout="@layout/divider_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_16dp" />

        <EditText
            android:id="@+id/fullNameEdt"
            style="@style/EditText_SignUp_Common"
            android:hint="@string/hint_full_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/usernameEdt"
            style="@style/EditText_SignUp_Common"
            android:hint="@string/hint_username"
            android:inputType="text" />

        <EditText
            android:id="@+id/emailEdt"
            style="@style/EditText_SignUp_Common"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/passwordEdt"
            style="@style/EditText_SignUp_Common"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/emailEdt" />

        <Button
            android:id="@+id/signUpBtn"
            style="@style/Button_common"
            android:text="@string/signup_btn_txt" />

        <TextView
            android:id="@+id/termsAndPrivacyPolicyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_16dp"
            android:padding="@dimen/small_8dp"
            android:text="@string/privacy_policy"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signUpBtn" />


        <TextView
            android:id="@+id/loginTxtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_16dp"
            android:layout_marginBottom="1dp"
            android:text="@string/login_have_an_account"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>
</layout>