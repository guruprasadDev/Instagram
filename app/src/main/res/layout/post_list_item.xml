<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="instagramPost"
            type="com.guruthedev.instagram.dataClass.Post" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:src="@{instagramPost.logo}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginMediumSmall"
            android:layout_marginTop="@dimen/marginMediumBig"
            android:text="@{instagramPost.name}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/fourteen"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/fab_margin"
            android:layout_height="@dimen/fab_margin"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:layout_marginEnd="@dimen/marginMediumBig"
            android:src="@drawable/dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/postImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginSmall"
            android:src="@{instagramPost.photo}"
            app:layout_constraintTop_toBottomOf="@id/imgProfile" />

        <ImageView
            android:id="@+id/HeartIcon"
            android:layout_width="@dimen/footer_menu_size"
            android:layout_height="@dimen/footer_menu_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:contentDescription="@string/_likes"
            android:src="@drawable/heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postImg" />

        <ImageView
            android:id="@+id/replyIcon"
            android:layout_width="@dimen/footer_menu_size"
            android:layout_height="@dimen/footer_menu_size"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:contentDescription="@string/_likes"
            android:src="@drawable/ic_baseline_reply_24"
            app:layout_constraintStart_toEndOf="@id/HeartIcon"
            app:layout_constraintTop_toBottomOf="@id/postImg" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="@dimen/footer_menu_size"
            android:layout_height="@dimen/footer_menu_size"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/send_icon"
            app:layout_constraintStart_toEndOf="@id/replyIcon"
            app:layout_constraintTop_toBottomOf="@id/postImg" />

        <ImageView
            android:id="@+id/bookmarkImg"
            android:layout_width="@dimen/five"
            android:layout_height="@dimen/five"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:layout_marginEnd="@dimen/marginMediumSmall"
            android:src="@drawable/ic_mini_bookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postImg" />

        <TextView
            android:id="@+id/likes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="@dimen/marginMediumBig"
            android:text="@{instagramPost.likes}"
            android:textColor="@color/gray"
            android:textSize="@dimen/fourteen"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HeartIcon" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likes_txt"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="@dimen/marginSmall"
            android:layout_marginEnd="@dimen/marginMediumSmall"
            android:ellipsize="end"
            android:text="@{instagramPost.description}"
            android:textColor="@color/gray"
            android:textSize="@dimen/fourteen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/likes_txt" />

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/five"
            android:layout_height="@dimen/five"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/marginMediumBig"
            android:layout_marginTop="@dimen/marginMediumBig"
            android:layout_marginBottom="@dimen/marginMediumSmall"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_txt" />

        <EditText
            android:id="@+id/comment_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifty"
            android:layout_marginTop="@dimen/marginMediumSmall"
            android:layout_toEndOf="@+id/profile_pic"
            android:background="@null"
            android:hint="@string/comment"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/fourteen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_pic"
            app:layout_constraintTop_toBottomOf="@id/description_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>