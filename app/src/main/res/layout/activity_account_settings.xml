<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_profile_img_btn"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/close" />

                <ImageView
                    android:id="@+id/save_profile_img_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/marginMediumBig"
                    android:src="@drawable/save_edited_info" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/profile_img_view_profile_frag"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/app_bar_profile_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginMediumBig"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/change_image_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_img_view_profile_frag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginMediumSmall"
        android:text="@string/change_image"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/fourteen"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/full_name_profile_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_image_text_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/marginMediumBig"
        android:layout_marginRight="20dp"
        android:hint="@string/full_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/username_profile_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name_profile_frag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/marginMediumBig"
        android:layout_marginRight="20dp"
        android:hint="@string/username"
        android:inputType="text" />

    <EditText
        android:id="@+id/bio__profile_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_profile_frag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/marginMediumBig"
        android:layout_marginRight="20dp"
        android:hint="@string/bio"
        android:inputType="text" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/delete_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/marginSmall"
        android:background="@color/colorPrimaryDark"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fourteen" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/marginSmall"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/marginMediumSmall"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Delete Account"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fourteen" />

</RelativeLayout>